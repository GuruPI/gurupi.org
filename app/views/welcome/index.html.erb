<div id="intro">
  <div class="container">
    <article class="topic">
      <div id="slideshow">
        <img class="active" src="/images/image1.jpg" alt="Rafael Marques palestrando no 4º Encontro do GuruPI" title="" />
        <img src="/images/image2.jpg" alt="" title="" />
        <img src="/images/image3.jpg" alt="" title="" />
        <img src="/images/image4.jpg" alt="" title="" />
      </div>
      <% if @event.present? %>
        <h2><%= @event.name %></h2>
        <%= markdown @event.description %>
        <%= link_to("Localização: #{@event.place}", @event.place_url) if @event.place_url.present? %>
      <% end %>
      <ul>
        <li class="talks"><a href="http://call4paperz.com/events/5%C2%BA-encontro-gurupi"><span class="icon"></span>Palestras</a></li>
        <li class="photos"><a href="#fotos"><span class="icon"></span>Fotos</a></li>
        <li class="videos"><a href="#videos"><span class="icon"></span>Vídeos</a></li>
      </ul>
    </article>
  </div>
</div>

<div id="extra">
  <div class="container">
    <section id="encontros" class="column">
      <h3 class="hat"><span class="icon"></span>Próximo Encontro</h3>
      <p class="title">Vote na palestra que você deseja assistir no próximo encontro GuruPI que será realizado no dia <%=l @event.event_date unless !@event.present? %></p>
      <% if @event.present? %>
          <ul>
               <% @event.lectures.each do |lecture| %>
                <li>
                  <p>
                    <img src="http://a2.twimg.com/profile_images/534258280/Photo_46_normal.jpg" alt="Dmitry Nix" class="photo">
                    <a href="http://twitter.com/dmitrynix">@dmitrynix</a> falando sobre:
                  </p>
                  <h4><a href="#ruby"><%=lecture.name%></a></h4>
                  <div>
                    <% if current_user %>
                      <%=link_to "<span class='count'>#{lecture.positive_vote}</span>".html_safe, {:controller => "lectures", :action => :vote_increment, :id => lecture.id, :commit => 'gostei' }, :class => "liked", :remote => true %>
                      <%=link_to "<span class='count'>#{lecture.negative_vote}</span>".html_safe, {:controller => "lectures", :action => :vote_increment, :id => lecture.id, :commit => "naogostei" }, :class => "disliked", :remote => true %>
                    <%end%>
                  </div>
                </li>
                <%end%>
          </ul>

          <% permitted_to? :show, :events do %>
            <%= link_to "<span class='icon'></span>Cadastrar Palestra".html_safe , @event, :class => "button-add" %>
          <%end%>

     <%end%>
    </section>

