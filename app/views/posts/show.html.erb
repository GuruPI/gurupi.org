<h1 class="hat title"><%= @post.title%></h1>

<%= markdown(@post.body) %>

<% if @post.user.present? %>
<div class="user_information">
  <p>Criado por <%= @post.user.identities.first.name %></p>
</div>
<% end %>

<div id="disqus_thread"></div>
<% content_for :javascripts do %>
<script type="text/javascript">
    var disqus_shortname = 'gurupi';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
<% end %>
<noscript>Por favor habilite o JavaScript para ver <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
