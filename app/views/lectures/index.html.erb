<h1>Listing lectures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Positive vote</th>
    <th>Negative vote</th>
    <th>User</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lectures.each do |lecture| %>
  <tr>
    <td><%= lecture.name %></td>
    <td><%= lecture.description %></td>
    <td><%= lecture.positive_vote %></td>
    <td><%= lecture.negative_vote %></td>
    <td><%= lecture.user_id %></td>
    <td><%= lecture.event_id %></td>
    <td><%= link_to 'Show', lecture %></td>
    <td><%= link_to 'Edit', edit_lecture_path(lecture) %></td>
    <td><%= link_to 'Destroy', lecture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

